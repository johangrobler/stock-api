

<p id="notice"><%= notice %></p>
  
<div class="row">

  <div class="col-md-6">
    <h1>Clinic</h1>
    <br>  
  </div>
</div>

  
<div class="row">

  <div class="col-md-6">
    
   <img src="https://maps.googleapis.com/maps/api/staticmap?center=<%=@clinic.latitude%>,<%=@clinic.longitude%>&zoom=12&size=500x300&maptype=roadmap&markers=color:red%7Clabel:Drop%7C<%=@clinic.latitude%>,<%=@clinic.longitude%>&key=AIzaSyC0b2vgQBPLWybCf0Qio0suZqXkkeVX1Ow" style="width:100%" />  
  </div>

  <div class="col-md-6">
<p>
  <strong>Name:</strong>
  <%= @clinic.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @clinic.address %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @clinic.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @clinic.longitude %>
</p>

<p>
  <strong>Mobile:</strong>
  <%= @clinic.mobile %>
</p>
 
  </div>
 </div>

  
<div class="row">

  <div class="col-md-12">

    <br>
    <h4>Stock</h4>
    <br>
    <table class="table">
      <thead>
        <tr> 
          <th>Product</th>
          <th>Quantity</th>
          <th>Replenisch</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clinic.stocks.each do |stock| %>
          <tr> 
            <td><%= stock.product.name %></td>
            <td><%= stock.quantity %></td>
            <td><%= stock.replenisch_at_quantity %></td> 
            <td><%= link_to 'Edit', edit_stock_path(stock) %></td> 
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

