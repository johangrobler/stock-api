

<p id="notice"><%= notice %></p>
  
 
  
<div class="row">

  <div class="col-md-6">
    
   <img src="https://maps.googleapis.com/maps/api/staticmap?center=<%=@clinic.latitude%>,<%=@clinic.longitude%>&zoom=12&size=800x400&maptype=roadmap&markers=color:red%7Clabel:Drop%7C<%=@clinic.latitude%>,<%=@clinic.longitude%>&key=AIzaSyC0b2vgQBPLWybCf0Qio0suZqXkkeVX1Ow" style="width:100%;margin-bottom:40px;" />  
  </div>

  <div class="col-md-6">
    <h1>Clinic Details</h1>
    <br>
<p>
  <strong>Name:</strong>
  <%= @clinic.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @clinic.address %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @clinic.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @clinic.longitude %>
</p>

<p>
  <strong>Mobile:</strong>
  <%= @clinic.mobile %>
</p>
<p>This mobile number will be smsed when stock quantity is below replenish quantity.</p>
 
  </div>
 </div>

  
<div class="row">

  <div class="col-md-12">

    <br>
    <h4>Stock at clinic</h4>
    <br>
    <table class="table">
      <thead>
        <tr> 
          <th>Product</th>
          <th>Quantity</th>
          <th>Replenish Quantity</th> 
        <th  style="width:20px;"></th>
        </tr>
      </thead>

      <tbody>
        <% @clinic.stocks.each do |stock| %> 
            <td><%= link_to stock.product.name , stock.product%></td> 
            <td><%= stock.quantity %></td>
            <td><%= stock.replenisch_at_quantity %></td>  
            <td  >
            <% if stock.quantity.to_i > stock.replenisch_at_quantity.to_i %>
              <i class="material-icons" style="color:yellowgreen">checkmark</i>
            <% else %>
              <i class="material-icons"  style="color:red">close</i>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

