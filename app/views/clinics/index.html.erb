<p id="notice"><%= notice %></p>

<%= link_to 'New Clinic', new_clinic_path ,class:'btn btn-secondary right' %>

<h1>Clinics</h1>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= link_to clinic.name, clinic %></td>
        <td><%= clinic.address %></td>
        <td><%= clinic.latitude %></td>
        <td><%= clinic.longitude %></td>
        <td><%= clinic.mobile %></td> 
        <td><%= link_to 'Edit', edit_clinic_path(clinic) ,class:'btn btn-secondary btn-sm'%></td>
        <td><%= link_to 'Destroy', clinic, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-danger btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
