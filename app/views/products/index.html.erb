<p id="notice"><%= notice %></p>

<%= link_to 'New Product', new_product_path ,class:'btn btn-secondary right' %>
<h1>Products</h1>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sku</th>
      <th>Barcode</th>
      <th>Clinic min quantity</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name ,product %></td>
        <td><%= product.sku %></td>
        <td><%= product.barcode %></td> 
        <td><%= product.replenish_quantity %></td> 

        <td width="50"><%= link_to 'Edit', edit_product_path(product) ,class:'btn btn-secondary btn-sm'%></td>
        <td  width="50">

        <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-danger btn-sm'%>
        

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 

