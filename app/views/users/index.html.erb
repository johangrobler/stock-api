<p id="notice"><%= notice %></p>

<%= link_to 'New User', new_user_path ,class:'btn btn-secondary right' %>
<h1>Users</h1>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Pin</th>
      <th>Token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td><%= user.pin %></td>
        <td><%= user.token %></td> 
        <td width="50"><%= link_to 'Edit', edit_user_path(user) ,class:'btn btn-secondary btn-sm'%></td>
        <td width="50"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-danger btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
 

